{
  "name": "ahorita",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo clean",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
    "deps:bump": "bunx npm-check-updates -ui -ws --pre beta",
    "deps:kill": "bunx npkill",
    "dev": "turbo run dev",
    "format": "prettier --write .",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "typecheck": "turbo run typecheck",
    "validate": "turbo run lint typecheck build"
  },
  "devDependencies": {
    "bun-types": "1.0.13",
    "eslint": "8.56.0",
    "gitzy": "4.0.0",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "0.5.11",
    "turbo": "1.11.3"
  },
  "packageManager": "bun@1.0.21"
}
