{
  "name": "ahorita",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "build": "turbo run build",
    "check": "turbo run format lint typecheck coverage build",
    "clean": "turbo clean",
    "coverage": "turbo run coverage",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
    "deps:dedupe": "rm -rf node_modules && rm bun.lock && bun install",
    "deps:up": "bunx npm-check-updates -ui -ws",
    "dev": "turbo run dev",
    "e2e": "turbo run e2e",
    "e2e:ui": "turbo run e2e -- --ui",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "postinstall": "lefthook install",
    "knip": "bunx --bun knip",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "preview": "turbo run preview",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@dotenv-run/cli": "1.3.6",
    "@types/bun": "1.3.3",
    "gitzy": "6.5.6",
    "knip": "5.70.1",
    "lefthook": "2.0.4",
    "turbo": "2.6.1"
  },
  "packageManager": "bun@1.3.3"
}
