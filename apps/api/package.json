{
  "name": "@ahorita/api",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target=bun --minify",
    "clean": "rimraf .turbo node_modules dist",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "dev": "bun run --hot src/index.ts",
    "format": "bunx @biomejs/biome format .",
    "format:fix": "bunx @biomejs/biome format --write .",
    "lint": "bunx @biomejs/biome lint .",
    "lint:fix": "bunx @biomejs/biome lint --apply .",
    "preview": "bun run dist/index.js",
    "setup": "drizzle-kit push:pg",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "0.8.0",
    "@elysiajs/swagger": "0.8.5",
    "@lucia-auth/adapter-drizzle": "1.0.2",
    "@neondatabase/serverless": "0.9.0",
    "date-fns": "3.3.1",
    "drizzle-orm": "0.29.4",
    "elysia": "0.8.17",
    "lucia": "3.0.1",
    "nanoid": "5.0.6",
    "oslo": "1.1.3",
    "picocolors": "1.0.0"
  },
  "devDependencies": {
    "drizzle-kit": "0.20.14",
    "pg": "8.11.3",
    "rimraf": "5.0.5",
    "tsconfig": "workspace:*"
  }
}
