{
  "name": "@ahorita/backend",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "NODE_ENV=production dotenv-run -- bun build ./src/index.ts --outdir ./dist --target=bun --minify",
    "clean": "rimraf .turbo node_modules dist",
    "db:push": "dotenv-run -- drizzle-kit push",
    "db:studio": "dotenv-run -- drizzle-kit studio",
    "dev": "dotenv-run -- bun run --hot src/index.ts",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "preview": "dotenv-run -- bun run dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "1.1.1",
    "@elysiajs/opentelemetry": "1.1.5",
    "@elysiajs/swagger": "1.1.1",
    "@libsql/client": "0.14.0",
    "@lucia-auth/adapter-drizzle": "1.1.0",
    "@opentelemetry/exporter-trace-otlp-proto": "0.52.1",
    "@opentelemetry/sdk-trace-node": "1.25.1",
    "@oslojs/crypto": "1.0.1",
    "@oslojs/encoding": "1.1.0",
    "drizzle-orm": "0.33.0",
    "drizzle-typebox": "0.1.1",
    "elysia": "1.1.18",
    "env-schema": "6.0.0",
    "lucia": "3.2.0",
    "nanoid": "5.0.7",
    "oslo": "1.2.1",
    "picocolors": "1.1.0"
  },
  "devDependencies": {
    "drizzle-kit": "0.24.2",
    "rimraf": "6.0.1",
    "typescript": "5.6.2"
  }
}
