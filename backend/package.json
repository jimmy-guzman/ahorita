{
  "name": "@ahorita/backend",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "clean": "rimraf .turbo node_modules dist",
    "db:push": "dotenv-run -- drizzle-kit push",
    "db:studio": "dotenv-run -- drizzle-kit studio",
    "dev": "dotenv-run -- bun run --hot src/index.ts",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "preview": "NODE_ENV=production dotenv-run -- bun run ./src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "1.4.0",
    "@elysiajs/openapi": "1.4.11",
    "@elysiajs/opentelemetry": "1.4.8",
    "@libsql/client": "0.15.15",
    "@lucia-auth/adapter-drizzle": "1.1.0",
    "@opentelemetry/exporter-trace-otlp-proto": "0.208.0",
    "@opentelemetry/sdk-trace-node": "2.2.0",
    "@oslojs/crypto": "1.0.1",
    "@oslojs/encoding": "1.1.0",
    "drizzle-orm": "0.44.7",
    "drizzle-typebox": "0.3.3",
    "elysia": "1.4.16",
    "env-schema": "7.0.0",
    "lucia": "3.2.2",
    "nanoid": "5.1.6",
    "oslo": "1.2.1",
    "picocolors": "1.1.1"
  },
  "devDependencies": {
    "drizzle-kit": "0.31.7",
    "rimraf": "6.1.2",
    "typescript": "5.9.3"
  }
}
