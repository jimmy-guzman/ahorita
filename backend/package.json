{
  "name": "@ahorita/backend",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "clean": "rimraf .turbo node_modules dist",
    "db:push": "dotenv-run -- drizzle-kit push",
    "db:studio": "dotenv-run -- drizzle-kit studio",
    "dev": "dotenv-run -- bun run --hot src/index.ts",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "preview": "NODE_ENV=production dotenv-run -- bun run ./src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "1.2.0",
    "@elysiajs/opentelemetry": "1.2.0",
    "@elysiajs/swagger": "1.2.2",
    "@libsql/client": "0.15.4",
    "@lucia-auth/adapter-drizzle": "1.1.0",
    "@opentelemetry/exporter-trace-otlp-proto": "0.54.2",
    "@opentelemetry/sdk-trace-node": "1.27.0",
    "@oslojs/crypto": "1.0.1",
    "@oslojs/encoding": "1.1.0",
    "drizzle-orm": "0.42.0",
    "drizzle-typebox": "0.3.2",
    "elysia": "1.2.25",
    "env-schema": "6.0.1",
    "lucia": "3.2.2",
    "nanoid": "5.1.5",
    "oslo": "1.2.1",
    "picocolors": "1.1.1"
  },
  "devDependencies": {
    "drizzle-kit": "0.31.0",
    "rimraf": "6.0.1",
    "typescript": "5.8.3"
  }
}
