{
  "name": "@ahorita/backend",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "NODE_ENV=production dotenv-run -- bun build ./src/index.ts --outdir ./dist --target=bun --minify",
    "clean": "rimraf .turbo node_modules dist",
    "db:push": "dotenv-run -- drizzle-kit push",
    "db:studio": "dotenv-run -- drizzle-kit studio",
    "dev": "dotenv-run -- bun run --hot src/index.ts",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "preview": "dotenv-run -- bun run dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "1.0.2",
    "@elysiajs/swagger": "1.0.4",
    "@lucia-auth/adapter-drizzle": "1.0.7",
    "@neondatabase/serverless": "0.9.1",
    "date-fns": "3.6.0",
    "drizzle-orm": "0.30.9",
    "drizzle-typebox": "0.1.1",
    "elysia": "1.0.15",
    "lucia": "3.2.0",
    "nanoid": "5.0.7",
    "oslo": "1.2.0",
    "picocolors": "1.0.0"
  },
  "devDependencies": {
    "drizzle-kit": "0.20.17-c347d7b",
    "pg": "8.11.5",
    "rimraf": "5.0.5",
    "typescript": "5.4.5"
  }
}
