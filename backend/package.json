{
  "name": "@ahorita/backend",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target=bun --minify",
    "clean": "rimraf .turbo node_modules dist",
    "db:push": "dotenv-run -- drizzle-kit push:pg",
    "db:studio": "dotenv-run -- drizzle-kit studio",
    "dev": "dotenv-run -- bun run --hot src/index.ts",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "preview": "dotenv-run -- bun run dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "1.0.2",
    "@elysiajs/swagger": "1.0.2",
    "@lucia-auth/adapter-drizzle": "1.0.4",
    "@neondatabase/serverless": "0.9.0",
    "date-fns": "3.6.0",
    "drizzle-orm": "0.30.2",
    "elysia": "1.0.4",
    "lucia": "3.1.1",
    "nanoid": "5.0.6",
    "oslo": "1.1.3",
    "picocolors": "1.0.0"
  },
  "devDependencies": {
    "drizzle-kit": "0.20.14",
    "pg": "8.11.3",
    "rimraf": "5.0.5"
  }
}
