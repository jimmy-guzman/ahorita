{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["biome.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "route-tree.gen.ts"]
    },
    "format": {},
    "format:fix": {
      "cache": false
    },
    "lint": {},
    "lint:fix": {
      "cache": false
    },
    "typecheck": {},
    "e2e": {
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "persistent": true
    },
    "coverage": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^coverage"]
    },
    "clean": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {},
    "db:studio": {}
  }
}
