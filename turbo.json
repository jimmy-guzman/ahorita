{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "format": { "dependsOn": ["topo"] },
    "format:fix": { "dependsOn": ["topo"] },
    "lint": { "dependsOn": ["topo"] },
    "lint:fix": { "dependsOn": ["topo"] },
    "typecheck": {},
    "e2e": {
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "clean": {
      "cache": false
    },
    "db:push": { "cache": false },
    "db:seed": {},
    "db:studio": {}
  }
}
